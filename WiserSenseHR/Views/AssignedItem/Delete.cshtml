@model WiserSenseHR.Data.Entities.AssignedItem
@using WiserSenseHR.Data.Enums

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>KULLANICIYA ZİMMETLİ EŞYA/EŞYALARI SİLMEK İSTEDİĞİNİZE EMİN MİSİNİZ ?</h1>

            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active"><a href="/AssignedItem/Index">Zimmetli Eşyalar</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<style>
    .content-header {
        border-top: 1px solid #ccc;
        padding-bottom: 2px;
        margin-bottom: 10px;
    }
</style>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Eşya İsmi :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemNames)
        </dd>
        <dt class = "col-sm-2">
            Açıklama :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Kullanıcı :
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
    </dl>
    
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
