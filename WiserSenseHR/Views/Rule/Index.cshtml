@model IEnumerable<WiserSenseHR.Data.Entities.Rule>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>GENEL KURALLAR</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active"><a href="/Rule/Index">Genel Kurallar</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<style>
    .content-header {
    border-top: 1.5px solid #ccc;
    border-bottom: 2px solid #ccc;
    padding-bottom: 7px;
    margin-bottom: 10px;
    }
</style>
<!-- /.content-header -->


<p>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Yeni Ekle</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kurallar
            </th>
            <th style ="width:50px"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.Raw(item.Description)
            </td>
            <td >
                    @if (User.IsInRole("Admin"))
                    {
                <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
