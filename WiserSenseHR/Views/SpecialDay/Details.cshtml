@model WiserSenseHR.Data.Entities.User

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>KULLANICI DETAYLARI</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active"><a href="/SpecialDay/Index">Yaklaşan Özel Günler</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<style>
    .content-header {
        border-top: 1px solid #ccc;
        padding-bottom: 2px;
        margin-bottom: 10px;
    }
</style>
<!-- /.content-header -->

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İsim :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Mail :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Durum :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            Rol :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            Departman :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-2">
            İş Başlığı :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.JobTitle)
        </dd>
        <dt class="col-sm-2">
            Telefon Numarası :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserInfo.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Doğum Günü :
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:yyyy-MM-dd}", Model.UserInfo.Birthday)
        </dd>
        <dt class="col-sm-2">
            İşe Başlangıç Tarihi :
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:yyyy-MM-dd}", Model.UserInfo.JobStartDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Birthdays">Listeye Geri Dön</a>
</div>
