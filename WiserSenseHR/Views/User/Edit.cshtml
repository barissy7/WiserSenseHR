@using WiserSenseHR.Data.Enums
@model WiserSenseHR.Data.Entities.User

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>KULLANICIYI DÜZENLE</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active"><a href="/User/Index">Kullanıcılar</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>
<style>
    .content-header {
        border-top: 1px solid #ccc;
        padding-bottom: 2px;
        margin-bottom: 10px;
    }
</style>
<!-- /.content-header -->

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">İsim-Soyisim</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" value="" placeholder="Mevcut şifreyi değiştirmek istemiyorsanız boş bırakın." autocomplete="new-password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label">Rol</label>
                <select asp-for="Role" asp-items="Html.GetEnumSelectList<UserRole>()" class="form-control">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label">Departman</label>
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<UserDepartment>()" class="form-control">
                    <option value="">Seçiniz...</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.JobTitle" class="control-label">İş Başlığı</label>
                <input asp-for="UserInfo.JobTitle" class="form-control" />
                <span asp-validation-for="UserInfo.JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.PhoneNumber" class="control-label">Telefon Numarası</label>
                <input asp-for="UserInfo.PhoneNumber" class="form-control" />
                <span asp-validation-for="UserInfo.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Birthday" class="control-label">Doğum Günü</label>
                <input asp-for="UserInfo.Birthday" class="form-control" type="date" />
                <span asp-validation-for="UserInfo.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.JobStartDate" class="control-label">İşe Başlangıç Tarihi</label>
                <input asp-for="UserInfo.JobStartDate" class="form-control" type="date" />
                <span asp-validation-for="UserInfo.JobStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

